{
  "name": "adaso-backend",
  "version": "1.0.0",
  "description": "ADASO Firma Takip Sistemi Backend",
  "main": "src/index.js",
  "keywords": [
    "adaso",
    "backend",
    "api",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "ADASO Team",
  "license": "MIT",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "build": "echo \"No build process needed\"",
    "docker:build": "docker build -t adaso-backend .",
    "docker:run": "docker run -p 7000:7000 adaso-backend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop adaso-backend",
    "pm2:restart": "pm2 restart adaso-backend",
    "pm2:logs": "pm2 logs adaso-backend",
    "pm2:monit": "pm2 monit",
    "logs:clear": "rm -rf logs/*",
    "cache:clear": "node -e \"require('./src/middleware/cache').clearAllCache()\"",
    "health:check": "node healthcheck.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-vault": "^1.25.0",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.14",
    "pdfkit": "^0.15.0",
    "redis": "^5.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^9.33.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3"
  }
}
